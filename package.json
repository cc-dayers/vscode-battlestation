{
  "name": "battlestation",
  "displayName": "Battlestation",
  "description": "A configurable panel with action buttons driven by battle.json",
  "version": "0.1.3",
  "publisher": "cc-dayers",
  "repository": {
    "type": "git",
    "url": "https://github.com/cc-dayers/vscode-battlestation"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "battlestation.open",
        "title": "Battlestation: Open Panel",
        "icon": "$(rocket)"
      },
      {
        "command": "battlestation.refresh",
        "title": "Battlestation: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "battlestation.openSettings",
        "title": "Battlestation: Settings",
        "icon": "$(gear)"
      },
      {
        "command": "battlestation.addItem",
        "title": "Battlestation: Add Action",
        "icon": "$(add)"
      },
      {
        "command": "battlestation.addGroup",
        "title": "Battlestation: Add Group",
        "icon": "$(new-folder)"
      },
      {
        "command": "battlestation.toggleSearch",
        "title": "Battlestation: Toggle Search",
        "icon": "$(search)"
      },
      {
        "command": "battlestation.toggleHidden",
        "title": "Battlestation: Show Hidden Items",
        "icon": "$(eye)"
      },
      {
        "command": "battlestation.hideHidden",
        "title": "Battlestation: Hide Hidden Items",
        "icon": "$(eye-closed)"
      },
      {
        "command": "battlestation.collapseAllGroups",
        "title": "Battlestation: Collapse All Groups",
        "icon": "$(collapse-all)"
      },
      {
        "command": "battlestation.expandAllGroups",
        "title": "Battlestation: Expand All Groups",
        "icon": "$(expand-all)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "battlestation",
          "title": "Battlestation",
          "icon": "$(rocket)"
        }
      ]
    },
    "icon": "media/icon.svg",
    "views": {
      "battlestation": [
        {
          "type": "webview",
          "id": "battlestation.view",
          "name": "Actions",
          "icon": "media/icon.svg",
          "contextualTitle": "Battlestation"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "battlestation.toggleSearch",
          "when": "view == battlestation.view",
          "group": "navigation@1"
        },
        {
          "command": "battlestation.addItem",
          "when": "view == battlestation.view",
          "group": "navigation@2"
        },
        {
          "command": "battlestation.addGroup",
          "when": "view == battlestation.view && battlestation.hasConfig",
          "group": "navigation@3"
        },
        {
          "command": "battlestation.collapseAllGroups",
          "when": "view == battlestation.view && battlestation.hasConfig && !battlestation.allGroupsCollapsed",
          "group": "navigation@4"
        },
        {
          "command": "battlestation.expandAllGroups",
          "when": "view == battlestation.view && battlestation.hasConfig && battlestation.allGroupsCollapsed",
          "group": "navigation@4"
        },
        {
          "command": "battlestation.toggleHidden",
          "when": "view == battlestation.view && !battlestation.showHidden",
          "group": "navigation@5"
        },
        {
          "command": "battlestation.hideHidden",
          "when": "view == battlestation.view && battlestation.showHidden",
          "group": "navigation@5"
        },
        {
          "command": "battlestation.refresh",
          "when": "view == battlestation.view",
          "group": "navigation@6"
        },
        {
          "command": "battlestation.openSettings",
          "when": "view == battlestation.view",
          "group": "navigation@7"
        }
      ]
    },
    "configuration": {
      "title": "Battlestation",
      "properties": {
        "battlestation.display.showIcon": {
          "type": "boolean",
          "default": false,
          "description": "Show icons next to button names"
        },
        "battlestation.display.showType": {
          "type": "boolean",
          "default": true,
          "description": "Show the type (NPM, Task, etc.) on the button"
        },
        "battlestation.display.showCommand": {
          "type": "boolean",
          "default": true,
          "description": "Show the command string on the button"
        },
        "battlestation.display.showGroup": {
          "type": "boolean",
          "default": true,
          "description": "Show group headers in the panel"
        },
        "battlestation.display.hideIcon": {
          "type": "string",
          "default": "eye-closed",
          "description": "Icon to use for the 'Hide Action' button"
        },
        "battlestation.customIconMappings": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "string"
          },
          "markdownDescription": "Custom icon mappings for command types. Keys are command types, values are [codicon names](https://microsoft.github.io/vscode-codicons/dist/codicon.html). Example: `{\"mytype\": \"rocket\", \"deploy\": \"cloud-upload\"}`",
          "description": "Custom icon mappings for command types (type: codicon-name pairs)"
        },
        "battlestation.shells": {
          "type": "object",
          "default": {
            "npm": "bash",
            "python": "bash"
          },
          "additionalProperties": {
            "type": "string"
          },
          "markdownDescription": "Map command types to specific shells. Example: `{\"npm\": \"bash\", \"task\": \"pwsh\"}`. If not specified, uses default terminal.",
          "description": "Shell configuration per command type"
        },
        "battlestation.display.playButtonBackgroundColor": {
          "type": "string",
          "default": "transparent",
          "description": "Background color of the play button (default: transparent)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run check-types && node esbuild.js --production",
    "watch": "node --no-deprecation esbuild.js --watch",
    "test": "vscode-test",
    "test:ui": "vscode-test --grep \"Manual\"",
    "test:ui-server": "node scripts/serve-ui.js",
    "test:unit": "vscode-test --grep -v \"Manual\"",
    "test:settings": "vscode-test --grep \"Settings\"",
    "test:settings:manual": "vscode-test --grep \"Manual test: Open settings panel\"",
    "test:actions": "vscode-test --grep \"Action UI\"",
    "test:drag": "vscode-test --grep \"Drag and Drop\"",
    "test:groups": "vscode-test --grep \"Group Management\"",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "package": "npm run build && vsce package",
    "publish": "npm run build && vsce publish",
    "release:patch": "npm run release-version patch",
    "release:minor": "npm run release-version minor",
    "release:major": "npm run release-version major",
    "release-version": "npm run build && npm version --no-git-tag-version",
    "release:tag": "node scripts/release-tag.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vscode/codicons": "^0.0.44",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.27.3",
    "esbuild-sass-plugin": "^3.6.0",
    "eslint": "^10.0.2",
    "eslint-plugin-lit": "^2.2.1",
    "glob": "^13.0.3",
    "lit": "^3.1.2",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
